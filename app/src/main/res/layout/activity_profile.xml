<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Profile">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="120dp"
        android:background="@drawable/upbox"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:layoutDirection="rtl"
            android:src="@drawable/backleft"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="-40dp"
            android:fontFamily="@font/vazir"
            android:text="حساب کاربری"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:background="@drawable/layer"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/avatar"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/userNamePtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-60dp"
            android:fontFamily="@font/vazir"
            android:text="User"
            android:textDirection="rtl" />

        <TextView
            android:id="@+id/editInfotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/vazir"
            android:text="ویرایش اطلاعات"
            android:textColor="#0E0B7B"
            android:textDirection="rtl" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/layer"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_marginLeft="640px"
            android:layout_marginTop="120px"
            android:background="@drawable/infobutton" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_marginLeft="680px"
            android:layout_marginTop="60px"
            android:background="@drawable/logoutbutton" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.721"
        app:srcCompat="@drawable/socialmedia" />

    <TextView
        android:id="@+id/versiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/vazir"
        android:text="نسخه 1.0  "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>