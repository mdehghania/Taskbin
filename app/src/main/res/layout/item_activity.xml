<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"> <!-- اضافه شده برای جهت راست به چپ -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="30dp"> <!-- اضافه شده برای جهت راست به چپ -->

            <CheckBox
                android:id="@+id/tvActivity"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/check_btn"
                android:button="@null"
                android:fontFamily="@font/vazirfdwol"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvActivityName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/vazirfdwol"
                android:text="Activity Name"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <ViewStub
                android:id="@+id/pin_stub"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:inflatedId="@+id/pin"
                android:layout="@layout/view_pin" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
